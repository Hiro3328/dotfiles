#!/bin/fish
function enable-zram
  modprobe zram
  zramctl /dev/zram0 --algorithm zstd --size "3096MiB"
  mkswap -U clear /dev/zram0
  swapon --discard --priority 100 /dev/zram0
  echo "zram enabled"
end

function enable-ntsync
  modprobe ntsync
end

function enable-gpu 
	coolerctl
end 

function enable-cpu
  cpupower -c all frequency-set -d 400MHz
  cpupower -c all frequency-set -u 3.9GHz

  echo 0 | tee /sys/devices/system/cpu/cpufreq/boost
end 

switch $argv
  case start
    enable-zram
    enable-cpu
		enable-gpu
  case stop
    swapoff /dev/zram0
	case test
  	enable-gpu
	case "*"
    enable-zram
    enable-cpu
end
