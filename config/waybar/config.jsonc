{
  "layer": "top",
  "position": "top",
  "mode": "dock",
  "exclusive": true,
  "passthrough": false,
  "gtk-layer-shell": true,
  "height": 0,
  "modules-left": [
    "niri/workspaces",
    "tray",
    "keyboard-state"
  ],
  "fixed-center": true,
  "modules-center": [
    "custom/updates",
    "clock",
    "custom/notifications",
  ],
  "modules-right": [
    "pulseaudio",
    "pulseaudio#microphone",
    "memory",
    "network",
    "disk",
  ],
  "niri/workspaces": {
    "sort-by-name": true,
    "format": "{icon}",
    "show-special": true
  },
  "tray": {
    "icon-size": 20,
    "spacing": 10
  },
  "clock": {
    "interval": 1,
    "format": "Û∞∏ó {:%a, %d %b %H:%M:%S}",
    "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "calendar": {
      "mode": "year",
      "mode-mon-col": 3,
      "format": {
        "months": "<span color='#e6e1cf'><b>{}</b></span>",
        "days": "<span color='#cad3f5'><b>{}</b></span>",
        "weekdays": "<span color='#ff3333'><b>{}</b></span>",
        "today": "<span color='#f5a97f'><b><u>{}</u></b></span>"
      }
    },  
    "actions": {
      "on-click-right": "mode",
      "on-scroll-up": "tz_up",
      "on-scroll-down": "tz_down",
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down",
      "on-click": "shift_reset"
    }
  },
  "keyboard-state": {
    "numlock": true,
    "capslock": true,
    "format": {
        "numlock":  "<small> üÖΩ:{icon} </small>",
        "capslock": "<small> üÖ∞:{icon} </small>"
    },
    "format-icons": {
        "locked": "ÔÄ£",
        "unlocked": "ÔÇú"
    }
  },
  "pulseaudio": {
    "format": "{icon}  {volume}%",
    "tooltip": false,
    "format-muted": "ÔÄ¶ Muted",
    "on-click": "wpctl set-mute @DEFAULT_SINK@ toggle",
    "on-scroll-up": "wpctl set-volume @DEFAULT_SINK@ 5%+",
    "on-scroll-down": "wpctl set-volume @DEFAULT_SINK@ 5%-",
    "format-icons": {
      "headphone": "ÔÄ•",
      "hands-free": "ÔÄ•",
      "headset": "ÔÄ•",
      "phone": "ÔÇï",
      "portable": "ÔÇï",
      "car": "ÔÜπ",
      "default": [
        "ÔÄ¶",
        "ÔÄß",
        "ÔÄ®",
      ]
    }
  },
  "pulseaudio#microphone": {
    "format": "{format_source}",
    "format-source": "ÔÑ∞ {volume}%",
    "format-source-muted": "ÔÑ± Muted",
    "on-click": "wpctl set-mute @DEFAULT_SOURCE@ toggle",
    "on-scroll-up": "wpctl set-volume @DEFAULT_SOURCE@ 5%+ --limit 1.15",
    "on-scroll-down": "wpctl set-volume @DEFAULT_SOURCE@ 5%-",
  },
  "network": {
    "interface": "eth*",
    "format-disconnected": "Disconnected",
    "format-wifi": "Ôá´  {essid}",
    "format-ethernet": "Û∞ñü {bandwidthDownOctets}",
    "tooltip-format": "ÔÑπ {signalStrength}",
    "tooltip-format-ethernet": "ÔÉÅ {ipaddr}",
    "on-click": "nm-connection-editor",
    "interval": 2
  },
  "bluetooth": {
    "format": "Ôäî {status}",
    "format-disabled": "Ôäî {status}",
    "format-connected": "Ôäî {num_connections}",
    "tooltip-format": "{device_alias}",
    "format-connected-battery": "Ôñ∞ {device_alias} {device_battery_percentage}%",
    "tooltip-format-enumerate-connected": "{device_alias}",
    "on-click": "btblock",
  },
  "memory": {
    "interval": 2,
    "format": "ÔÉâ {used}G",
    "tooltip-format": "{used} / {total} G",
  },
  "disk": {
    "interval": 6000,
    "format": "ÔÇ† {percentage_used}%",
    "tooltip-format": "{used} used out of {total} on {path} ",
    "on-click": "baobab"
  },
  "custom/updates": {
    "format": "{}",
    "tooltip": true,
    "interval": 1200,
    "exec": "$HOME/.config/waybar/bin/updatecheck",
    "return-type": "json",
    "exec-if": "exit 0",
    "signal": 8
  },

  "custom/notifications": {
    "interval": 1,
    "format": "{text} {icon}",
    "exec": "$HOME/.config/waybar/bin/notifications",
    "return-type": "json",
    "signal": 8,

    "format-icons": {
      "notification": "ÔÇ¢<span foreground='red'><sup>ÔëÑ</sup></span>",
      "none": "ÔÇ¢",
      "dnd-notification": "Ôá∑<span foreground='red'><sup>ÔëÑ</sup></span>",
      "dnd-none": "Ôá∑"
    },
    
    "on-click": "",
    "on-click-right": "",
    "tooltip": false
  }
}
